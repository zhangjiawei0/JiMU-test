*
  margin: 0
  padding: 0

html
  font-size: 54px

body
  font-size: 12px
  touch-action: manipulation
  font-family: Montserrat-Regular, sans-serif
  overflow-y: scroll
  min-width: 320px
  max-width: 750px
  margin: auto

#jm-aboutus 
  .label
    display: block
    text-align: center
    font-size: 20px
    padding-bottom: 1.0667rem
    position: relative
    &:after
      content: ' '
      width: 20px
      height: 3px
      position: absolute
      left: 0
      right: 0
      margin: 35px auto
      background: #3793df    
  .features-wrap
    padding: 0 .6667rem 1.0667rem
    .jimu-logo
      margin: 1.0667rem 0
      display: block
      text-align: center
      img
        display: inline-block
        vertical-align: middle
        width: 2.12rem
        height: .7467rem
    .label
      padding-bottom: 0
    .feature
      float: left
      text-align: center
      width: 50%
      img
        width: 60px
        vertical-align: middle
        margin: .8667rem auto .4667rem
      p
        line-height: 18px
        color: #8b939f
        &.tit
          color: #2c3038
          font-size: 17px
          margin: .1333rem auto
    .clearfix
      clear: both
        
  .choice
    background: url(/images/mountain-bg-fa6666d1ac.png) top center #3793df
    background-size: cover
    padding: 1.0667rem .6667rem 2.1333rem
    box-sizing: border-box
    .label
      color: #fff
      margin-bottom: .6667rem
      &:after
        background: #fff
    .swiper-slide
      padding: 0 .4rem .8rem
      box-sizing: border-box
      margin: 0 .16rem
      background: #fff
      box-shadow: 0 0 60px 0 rgba(19,105,176,.8)
      border-radius: 8px
      height: 100%
      transform: scale(1, .9)
      opacity: .8
    .tit
      text-align: center
      margin: .5333rem 0
      font-size: 30px
    table
      border-collapse: collapse
      border-spacing: 0
      border: none
      tr
        display: block
        padding: .1333rem 0
        font-size: 12px
        color: #2c3038
        vertical-align: top
        td:first-child
          padding-right: 5px
          white-space: nowrap
          vertical-align: top
    .swiper-slide-active
        transform: scale(1)
        opacity: 1
        
  .swiper-container
    margin: 0 auto
    position: relative
    overflow: hidden
    z-index: 1
    .swiper-wrapper
      width: 100%
      height: 100%
      position: relative
      z-index: 1
      display: flex
      transition-property: transform
      box-sizing: content-box
      .swiper-slide
        width: 100%
        height: 100%
        position: relative
        flex-shrink: 0
    .swiper-pagination-bullet
      background: #fff
      opacity: .5
    .swiper-pagination-bullet-active
      background: #fff
      opacity: 1
  .logo-history-wrap
    text-align: center
    padding: 1.0667rem .5333rem
    p
      line-height: 18px
      text-align: left
      margin-bottom: .2667rem
      &.tit
        text-align: center
        font-size: 17px
      &.content
        text-align: center
        color: #8b939f
    img
      width: 80px
      vertical-align: middle
      margin: .8rem auto .4rem

@font-face
  font-family: 'Montserrat-Regular'
  src: url('/font/Montserrat-Regular.eot')
  src: url('/font/Montserrat-Regular.eot?#iefix') format('embedded-opentype'),
       url('/font/Montserrat-Regular.woff') format('woff'),
       url('/font/Montserrat-Regular.ttf') format('truetype'),
       url('/font/Montserrat-Regular.svg#Montserrat-Regular') format('svg')

